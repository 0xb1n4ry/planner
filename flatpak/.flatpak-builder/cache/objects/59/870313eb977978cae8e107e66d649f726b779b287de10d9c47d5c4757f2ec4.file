[Application]
name=com.github.alainm23.planner
runtime=org.gnome.Platform/x86_64/3.30
sdk=org.gnome.Sdk/x86_64/3.30
base=app/io.elementary.BaseApp/x86_64/juno
command=com.github.alainm23.planner

[Context]
shared=network;ipc;
sockets=x11;wayland;
filesystems=xdg-run/dconf;home;~/.config/dconf:ro;

[Session Bus Policy]
org.evolution.dataserver.*=talk
ca.desrt.dconf=talk
org.gtk.vfs.*=talk

[System Bus Policy]
org.freedesktop.GeoClue2=talk

[Environment]
DCONF_USER_CONFIG_DIR=.config/dconf

[Extension com.github.alainm23.planner.Locale]
directory=share/runtime/locale
autodelete=true
locale-subset=true

[Extension com.github.alainm23.planner.Debug]
directory=lib/debug
autodelete=true
no-autodownload=true

[Build]
built-extensions=com.github.alainm23.planner.Locale;com.github.alainm23.planner.Debug;